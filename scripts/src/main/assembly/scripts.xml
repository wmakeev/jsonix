<assembly>
	<id>scripts</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>Jsonix-${project.version}</baseDirectory>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/javascript/org/hisrc/jsonix/Jsonix</directory>
			<includes>
				<include>**/*.js</include>
			</includes>
			<outputDirectory>lib/Jsonix</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/javascript/org/hisrc/jsonix</directory>
			<includes>
				<include>Jsonix.js</include>
			</includes>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/classes/org/hisrc/jsonix</directory>
			<includes>
				<include>Jsonix-all.js</include>
				<include>Jsonix-min.js</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
